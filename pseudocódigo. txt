      leia (s)
      escreva ("Terceira nota: ")
      leia (t)
      m <- (p + s + t)/ 3
      escreval ("----------------------------")
      escreval ("A mÃ©dia do aluno ", nome, " foi: ", m:4:2)
      se (m >= 9) e (m <=10) entao
       escreval("APROVEITAMENTO: A")
